# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://qetta:qetta_dev_password@localhost:5432/qetta
REDIS_URL=redis://localhost:6379

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=change-this-to-a-secure-random-string-min-32-characters-for-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=change-this-to-another-secure-random-string-min-32-characters-for-production
REFRESH_TOKEN_EXPIRES_IN=7d

# ========================================
# Encryption (AES-256-GCM)
# ========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ========================================
# Toss OAuth Configuration
# ========================================
TOSS_CLIENT_ID=your-toss-client-id-from-developer-portal
TOSS_CLIENT_SECRET=your-toss-client-secret-from-developer-portal
TOSS_REDIRECT_URI=http://localhost:3001/api/v1/oauth/toss/callback
TOSS_AUTHORIZE_URL=https://oauth.toss.im/authorize
TOSS_TOKEN_URL=https://oauth.toss.im/token
TOSS_API_BASE_URL=https://api.toss.im

# ========================================
# KFTC OpenBanking Configuration
# ========================================
KFTC_CLIENT_ID=your-kftc-client-id-from-openbanking-portal
KFTC_CLIENT_SECRET=your-kftc-client-secret-from-openbanking-portal
KFTC_REDIRECT_URI=http://localhost:3001/api/v1/oauth/kftc/callback
KFTC_AUTHORIZE_URL=https://testapi.openbanking.or.kr/oauth/2.0/authorize
KFTC_TOKEN_URL=https://testapi.openbanking.or.kr/oauth/2.0/token
KFTC_API_BASE_URL=https://testapi.openbanking.or.kr

# ========================================
# AWS S3 Configuration
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-northeast-2
S3_BUCKET=qetta-documents
S3_PUBLIC_URL=https://qetta-documents.s3.ap-northeast-2.amazonaws.com

# ========================================
# BullMQ Queue Configuration
# ========================================
QUEUE_CONCURRENCY=5
QUEUE_RATE_LIMIT_MAX=100
QUEUE_RATE_LIMIT_DURATION=60000

# ========================================
# Monitoring & Logging
# ========================================
SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
LOG_LEVEL=info

# ========================================
# Server Configuration
# ========================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
API_BASE_PATH=/api/v1

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ========================================
# CORS Origins (comma-separated)
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# Idempotency Configuration
# ========================================
IDEMPOTENCY_TTL=86400
